@model IEnumerable<RWA_MVC_LeaRezic.Models.ViewModels.CustomerVM>

@{
    ViewBag.Title = "ViewAll";
}

<div style="margin-bottom:20px;">
    <h2 class="text-muted" style="display:inline-block">Customers List</h2>
</div>

<table id="customersTable" class="table table-striped table-hover table-bordered">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityID)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a href="mailto:@item.Email">@item.Email</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.Action("GetCityName", new { id = item.CityID })
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IDCustomer }, new { @class = "btn btn-link btn-xs" })
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Add New Customer", "Create", null, new { @class="btn btn-primary" })

@section Scripts {

    @Scripts.Render("~/bundles/datatables")

    <script>
        // ovo bu bio ajax, zasad samo klijentski - ružno i sporo :D
        $('#customersTable').DataTable({
            "ordering": true,
            "order": [],
            "columnDefs": [
                { "orderable": false, "targets": 2 },
                { "orderable": false, "targets": 3 },
                { "orderable": false, "targets": 5 }
            ]
        });
    </script>
}
